@model string
@{
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <title>نتیجه پرداخت</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <style>

        body {
            overflow: hidden;
            background-color: #f4f6f8;
        }

        .card {
            background: #fff;
            border: none;
            transition: transform .3s ease, box-shadow .3s ease;
            max-width: 420px;
            overflow: hidden;
            margin: 100px auto;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            }

        h4 {
            font-weight: 700;
        }

        p {
            color: #444;
        }

        .btn-outline-primary {
            border-radius: 12px;
            padding: 10px 25px;
            font-size: 15px;
            transition: .3s;
        }

            .btn-outline-primary:hover {
                background-color: #0d6efd;
                color: #fff;
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }

        a {
            text-decoration: none;
            color: inherit;
        }

    </style>

</head>
<body>

    <div class="card text-center shadow-lg p-5 rounded-4" style="">
        <h4 class="mb-3 text-primary">وضعیت تراکنش</h4>
        <p class="fs-5">@Model</p>

        <a href="/Payment/PaymentList" class="btn btn-outline-primary mt-3">
            بازگشت
        </a>
    </div>

</body>
</html>


