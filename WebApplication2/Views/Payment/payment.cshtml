
@model WebApplication2.Models.Order
@using System.Linq
@{
	Layout = "/Views/Shared/_DefaultLayout.cshtml"; 
	var payments = ViewBag.Payments as List<WebApplication2.Models.Order>;
}

<!DOCTYPE html>
<html lang="fa">
<head>
	<meta charset="UTF-8">
	<title>درگاه پرداخت ‌شبیه‌سازی‌شده</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
	<style>
		body {
			background: linear-gradient(135deg, #fdfcfb, #e2d1c3);
			overflow-x: hidden;
		}

		a {
			text-decoration: none;
			color: inherit;
		}
		.payment-wrapper {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: flex-start;
			min-height: 100vh;
			padding-top: 70px;
		}

		.payment-card {
			background: #ffffff;
			border-radius: 20px;
			box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
			padding: 40px 45px;
			width: 100%;
			max-width: 480px;
			border-top: 8px solid #FFD43B;
			position: relative;
			transition: 0.4s ease;
		}

			.payment-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 15px 30px rgba(0, 87, 255, 0.15);
			}

			.payment-card::before {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 30px;
				background: linear-gradient(to right, #0057ff, #ffd43b);
				border-radius: 20px 20px 0 0;
			}

		h4 {
			text-align: center;
			font-size: 24px;
			font-weight: 700;
			color: #0057ff;
			margin-bottom: 30px;
		}

		.form-label {
			margin-bottom: 10px;
			font-weight: 600;
			color: #333;
			display: inline-block;
		}

		.form-control {
			border-radius: 10px;
			padding: 12px 14px;
			font-size: 15px;
			border: 1.5px solid #dee2e6;
			transition: all 0.3s;
		}

			.form-control:focus {
				border-color: #0057ff;
				box-shadow: 0 0 8px rgba(0, 87, 255, 0.25);
			}

		.btn-primary {
			background: linear-gradient(90deg, #0057ff, #007bff);
			border: none;
			font-weight: 600;
			padding: 12px;
			font-size: 16px;
			border-radius: 10px;
			width: 48%;
			transition: 0.3s;
			box-shadow: 0 4px 10px rgba(0, 87, 255, 0.2);
		}

			.btn-primary:hover {
				background: #0048d4;
				transform: translateY(-2px);
			}

		.btn-danger {
			background: linear-gradient(90deg, #ff4d4d, #ff6b6b);
			border: none;
			font-weight: 600;
			padding: 12px;
			font-size: 16px;
			border-radius: 10px;
			width: 48%;
			transition: 0.3s;
			box-shadow: 0 4px 10px rgba(255, 77, 77, 0.2);
		}

			.btn-danger:hover {
				background: #e03c3c;
				transform: translateY(-2px);
			}

		/* افکت ظاهر شدن */
		@@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(20px);
			}

			to {
				opacity: 1;
				transform: translateY(0);
			}
		}
	</style>
</head>

<body>
	<div class="payment-wrapper">
		<div class="payment-card">
			<h4></h4>
			<form asp-action="Payment" asp-controller="Payment" method="post">
				<div class="mb-3">
					<label asp-for="CustomerName" class="form-label">نام مشتری</label>
					<input asp-for="CustomerName" class="form-control" placeholder="مثلاً علی احمدی">
					<span asp-validation-for="CustomerName" class="text-danger"></span>
				</div>

@* 				<div class="mb-3">
					<label asp-for="Amount" class="form-label">مبلغ (تومان)</label>
					<input asp-for="Amount" class="form-control" placeholder="مثلاً 250000">
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div> *@
				<div class="mb-3">
					<label asp-for="Amount" class="form-label">مبلغ (تومان)</label>
					<input asp-for="Amount" type="text" class="form-control" placeholder="مثلاً 250000"
						   oninput="this.value = this.value.replace(/^0+/, '').replace(/[^0-9]/g, '')">
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Phone" class="form-label">شماره همراه</label>
					<input asp-for="Phone" class="form-control" placeholder="09xxxxxxxxx">
					<span asp-validation-for="Phone" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Description" class="form-label">توضیحات</label>
					<textarea asp-for="Description" class="form-control" placeholder="مثلاً پرداخت بابت سفارش شماره ۱۲۳۴"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="d-flex justify-content-between">
					<button type="submit" class="btn btn-primary">ایجاد لینک پرداخت</button>
				</div>
			</form>
		</div>

	</div>
</body>
</html>



