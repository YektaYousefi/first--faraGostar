				<div class="form-group">
					<label asp-for="CustomerName">نام مشتری</label>
					<input asp-for="CustomerName" type="text" class="form-control" placeholder="نام مشتری">
					<span asp-validation-for="CustomerName" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Amount">مبلغ (تومان)</label>
					<input asp-for="Amount" type="number" class="form-control" placeholder="">
					<span asp-validation-for="Amount" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Phone">شماره همراه</label>
					<input asp-for="Phone" type="tel" class="form-control" placeholder="شماره همراه">
					<span asp-validation-for="Phone" class="text-danger"></span>
				</div>

				<div class="form-group">
