@model WebApplication2.Models.Order
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
	<meta charset="UTF-8">
	<title>درگاه پرداخت زرین‌پال شبیه‌سازی‌شده</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
	<style>
		body {
			font-family: 'Vazirmatn', sans-serif;
			direction: rtl;
			background-color: #f4f6f8;
		}

		.gateway-container {
			max-width: 480px;
			margin: 100px auto;
			background: #fff;
			border-radius: 20px;
			box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
			overflow: hidden;
		}

		.gateway-header {
			background: linear-gradient(90deg, #0057ff, #ffd43b);
			padding: 25px;
			text-align: center;
			color: #fff;
			font-size: 22px;
			font-weight: 700;
			position: relative;
		}

			.gateway-header i {
				position: absolute;
				left: 25px;
				top: 25px;
				font-size: 22px;
			}

		.gateway-body {
			padding: 30px;
			text-align: center;
		}

		.amount-box {
			background: #f9fafc;
			border-radius: 10px;
			padding: 15px;
			font-size: 18px;
			margin-bottom: 25px;
			border: 1px solid #e0e3e7;
		}

		.btn-success {
			background: linear-gradient(90deg, #ffd43b, #ffcc00);
			color: #000;
			font-weight: 600;
			border: none;
			border-radius: 10px;
			padding: 12px 24px;
			transition: 0.3s;
		}

			.btn-success:hover {
				background: #ffc107;
				transform: translateY(-2px);
			}

		.btn-danger {
			background: #e63946;
			border: none;
			font-weight: 600;
			border-radius: 10px;
			padding: 12px 24px;
			transition: 0.3s;
		}

			.btn-danger:hover {
				background: #c62828;
				transform: translateY(-2px);
			}

		.btn-container {
			display: flex;
			justify-content: center;
			gap: 15px;
		}

		.footer-note {
			font-size: 13px;
			color: #888;
			margin-top: 25px;
		}

		.lock-icon {
			color: #fff;
		}
	</style>
</head>
<body>
	<div class="gateway-container">
		<div class="gateway-header">
			<i class="bi bi-lock-fill lock-icon"></i>
			درگاه پرداخت
		</div>

		<div class="gateway-body">
			<p class="mb-3">کاربر گرامی، در حال پرداخت مبلغ زیر هستید:</p>
			<div class="amount-box">
				مبلغ قابل پرداخت: <strong>@Model.Amount.ToString("N0") تومان</strong>
			</div>

			<div class="btn-container">
				<form method="post" action="/Payment/ConfirmPayment/@Model.UserId">
					<button type="submit" class="btn btn-success">پرداخت</button>
				</form>

				<form method="post" action="/Payment/CancelPayment/@Model.UserId">
					<button type="submit" class="btn btn-danger">انصراف</button>
				</form>
			</div>

			<p class="footer-note mt-4">
				با کلیک روی دکمه پرداخت، به صورت شبیه‌سازی‌شده تراکنش شما تکمیل می‌شود.
			</p>
		</div>
	</div>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</body>
</html>
