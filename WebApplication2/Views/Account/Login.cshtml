@model WebApplication2.ViewModels.LoginViewModel
@{
    Layout = "/Views/Shared/_DefaultLayout.cshtml";
}

<html>
<head lang="fa">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود به سایت</title>
    <style>
        body {
            background: linear-gradient(135deg, #e9f0fb, #ffffff);
            font-family: 'Vazirmatn', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            direction: rtl;
        }

        .breadcrumb-custom {
            font-size: 14px;
            margin-bottom: 25px;
            color: #6c757d;
            text-align: right;
        }

        .breadcrumb-item {
            display: inline-block;
            margin-right: 5px;
        }

        .container {
            max-width: 450px; /* بزرگ‌تر شد */
            width: 100%;
            background-color: #ffffff;
            padding: 50px 40px; /* فاصله بیشتر داخل فرم */
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            text-align: center;
            transition: transform 0.3s ease;
            margin-right: 40px;
        }

            .container:hover {
                transform: translateY(-3px);
            }

        h4 {
            font-size: 24px;
            font-weight: 600;
            color: #0057ff;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px; /* فاصله بین تکست‌باکس‌ها بیشتر شد */
            text-align: right;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
                font-weight: 500;
                color: #495057;
                font-size: 15px;
            }

            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 14px 14px; /* بزرگ‌تر و راحت‌تر */
                font-size: 16px;
                border: 1px solid #ced4da;
                border-radius: 10px;
                transition: all 0.3s;
                margin-right: -10px;
            }

                .form-group input:focus,
                .form-group textarea:focus {
                    border-color: #0057ff;
                    box-shadow: 0 0 0 0.2rem rgba(0, 87, 255, 0.25);
                    outline: none;
                }

        .btn-success {
            width: 100%;
            padding: 14px;
            font-size: 17px;
            font-weight: 600;
            color: #fff;
            background: linear-gradient(90deg, #0057ff, #007bff);
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-success:hover {
                background: #0048d4;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            }

        .text-danger {
            font-size: 14px;
            margin-top: 5px;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
            font-size: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            padding: 12px;
            text-align: center;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            font-size: 15px;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 15px;
            text-align: center;
        }

        a {
            color: #0057ff;
            text-decoration: none;
            transition: all 0.3s;
        }

            a:hover {
                color: #0048d4;
                text-decoration: underline;
            }
    </style>


</head>
<body style="text-align:right;">
    <ul class="breadcrumb-custom" style="text-align: right;">
        <li class="breadcrumb-item">خانه </li>
        <li class="breadcrumb-item">ورود</li>
    </ul>
    <div class="container">
        @if (ViewBag.isSuccess != null)
        {
            <div class="alert alert-success text-center">
                <p class="help-block">ورود با موفقیت انجام شد</p>
            </div>
            <script>
                var delay = 3000;
                setTimeout(function () { window.location = "https://localhost:44300/Payment/Payment"; }, delay);
            </script>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="UserName"></label><br />
                <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" aria-describedby="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-success"> ورود به صفحه پرداخت </button>
            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color:red;">@ViewBag.ErrorMessage</p>
            }
        </form>
    </div>
</body>
</html>