        {
            <div class="alert-success">با موفقیت وارد شدید</div>
            <script>
                setTimeout(() => location.href = "/Payment/PaymentList", 2000);
            </script>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert-danger">@ViewBag.ErrorMessage</div>
            <br />
        } *@

        <form asp-action="Login" method="post">

            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" placeholder="نام کاربری" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" placeholder="رمز عبور" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn-submit">ورود به سیستم</button>

        </form>

    </div>

    <div class="login-image">
        <img src="/img/LoginPic2.png" alt="login">
    </div>

</div>

