@model WebApplication2.ViewModels.LoginViewModel
@{
    Layout = "/Views/Shared/_DefaultLayout.cshtml";
}
<!DOCTYPE html>
<html dir="rtl" lang="fa-IR">

<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <title>ورود به سیستم</title>

    <style>
        .page-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
/*             height: 100vh;
 */            padding: 0 60px;
        }

        .login-image {
            flex: 1.3;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .login-image img {
                width: 85%;
                max-width: 650px;
            }

        .login-box {
            flex: 0.6;
            background: #fff;
            padding: 40px 35px;
            border-radius: 18px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        }

            .login-box h2 {
                text-align: center;
                color: #2c3e50;
                margin-bottom: 10px;
                font-size: 22px;
            }

            .login-box p {
                text-align: center;
                color: #6c757d;
                margin-bottom: 25px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 7px;
                font-weight: 500;
                color: #495057;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #d0d7de;
                border-radius: 10px;
                font-size: 15px;
                transition: all 0.3s;
            }

                .form-group input:focus {
                    border-color: #0057ff;
                    box-shadow: 0 0 5px rgba(0,87,255,0.2);
                    outline: none;
                }

        .btn-submit {
            width: 100%;
            padding: 14px;
            border: none;
            background: #005dff;
            color: white;
            font-size: 16px;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-submit:hover {
                background: #0048d4;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.1);
            }

        .alert-success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 15px;
            color: #155724;
        }

        .alert-danger {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 15px;
            color: #721c24;
        }

        @@media (max-width: 960px) {
            .page-wrapper

        {
            flex-direction: column;
            text-align: center;
            padding: 20px;
        }

        .login-image img {
            width: 70%;
            margin-bottom: 20px;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
        }

        }
    </style>
</head>

<body>

    <div class="page-wrapper">
        <div class="login-box">

            <h2>ورود به سیستم</h2>
            <p>لطفا اطلاعات خود را وارد کنید</p>

            @if (ViewBag.isSuccess != null)
            {
                <div class="alert-success">با موفقیت وارد شدید</div>
                <script>
                    setTimeout(() => location.href = "/Payment/Payment", 2000);
                </script>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert-danger">@ViewBag.ErrorMessage</div>
            }

            <form asp-action="Login" method="post">

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" placeholder="نام کاربری" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" placeholder="رمز عبور" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button class="btn-submit">ورود به سیستم</button>

            </form>

        </div>

        <div class="login-image">
            <img src="/img/LoginPic.png" alt="login">
        </div>        

    </div>

</body>
</html>
