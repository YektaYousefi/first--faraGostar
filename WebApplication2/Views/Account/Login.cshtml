@model WebApplication2.ViewModels.LoginViewModel
@{
    Layout = "/Views/Shared/_DefaultLayout.cshtml";
}

<style>
    /* ارتفاع صفحه با در نظر گرفتن هدر */
    .login-container {
        max-width: 1200px;
        margin: 0 auto;
        background: #fff;
        display: flex;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        overflow: hidden;
        min-height: calc(100vh - 80px); /* ارتفاع کامل صفحه - ارتفاع هدر */
        margin-top: 20px;
    }

    .login-box {
        flex: 0.7;
        padding: 50px 40px;
        background: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .login-image {
        flex: 1;
        background: #eef3ff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
    }

        .login-image img {
            width: 100%;
            max-width: 900px;
        }

    body {
        overflow: hidden;
        background: #f8fafc;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 12px !important; /* فاصله بین لیبل و تکست‌باکس */
            font-weight: 500;
            color: #495057;
        }
        .form-group input {
            padding: 12px;
            border: 1px solid #d0d7de;
            border-radius: 10px;
            width: 100%;
            font-size: 15px;
        }

    .btn-submit {
        width: 100%;
        padding: 14px;
        background: #005dff;
        color: white;
        border-radius: 12px;
        border: none;
        font-size: 16px;
        font-weight: 600;
    }

    @@media(max - width: 960px)

    {
        .login-container

    {
        flex-direction: column;
        min-height: auto;
        margin-top: 15px;
        height: auto;
    }

    body {
        overflow: auto;
    }

    }
</style>

<div class="login-container">

    <div class="login-box">

        <h2 class="text-center mb-3">ورود به سیستم</h2>
        <p class="text-center text-muted mb-4">لطفا اطلاعات خود را وارد کنید</p>

